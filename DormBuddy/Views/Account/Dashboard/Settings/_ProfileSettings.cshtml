@model DormBuddy.Models.UserProfile

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Settings</title>
    <style>
        .alert { color: red; }
    </style>
    <script>
        function validateImage() {
            const fileInput = document.getElementById("imageInput");
            const file = fileInput.files[0];
            const allowedExtensions = ["image/jpeg", "image/png", "image/jpg", "image/gif"];
            const maxFileSize = 2 * 1024 * 1024;

            if (!file) {
                alert("No image uploaded. Please choose an image file.");
                return false;
            }

            if (!allowedExtensions.includes(file.type)) {
                alert("Invalid file type. Please upload a JPG, JPEG, PNG, or GIF image.");
                return false;
            }

            if (file.size > maxFileSize) {
                alert("File size should be less than 2 MB.");
                return false;
            }

            const img = new Image();
            img.onload = function () {
                const maxDimension = 500;

                if (img.width > maxDimension || img.height > maxDimension) {
                    alert("Image dimensions should not exceed 500x500 pixels.");
                    fileInput.value = "";
                    return false;
                } else {
                    document.getElementById("uploadForm").submit();
                }
            };
            img.onerror = function () {
                alert("Invalid image file.");
                fileInput.value = "";
            };
            img.src = URL.createObjectURL(file);
            return false;
        }
    </script>
</head>
<body>

@if (User?.Identity != null && User?.Identity.IsAuthenticated == true) {

    <div>
        <h2>Profile Settings</h2>

        <!-- Profile Image Upload Section -->
        <div>
            <label>Upload Profile Image</label>
            <form id="uploadForm" asp-controller="Imgur" asp-action="UploadImage" method="post" enctype="multipart/form-data" onsubmit="return validateImage()">
                <input type="file" name="image" id="imageInput" accept=".jpg, .jpeg, .png, .gif" />
                <button type="submit">Upload</button>
            </form>
        </div>

        <!-- Display Message -->
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">
                <p>@TempData["Message"]</p>
            </div>
        }

        
        <!-- Bio Section -->
        <div>
            <h3>Update Bio</h3>
            <form asp-controller="Imgur" asp-action="UpdateBio" method="post">
                <textarea name="bio" rows="4" cols="50" maxlength="250" placeholder="Write a short bio about yourself...">@Model.Bio</textarea>
                <br />
                <button type="submit">Save Bio</button>
            </form>
        </div>
    </div>

}

</body>
</html>
