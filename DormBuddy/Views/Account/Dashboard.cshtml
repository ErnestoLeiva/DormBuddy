@{
    ViewData["Title"] = "Dashboard";
}

@{
    var roleLabel = ViewBag.UserRoles.Contains(",") ? "Roles" : "Role"; // ift there is more than one role add an 's'
    var roles = ViewBag.UserRoles.Split(',');
}

<!-- DASHBOARD HEADER -->
<div class="text-center mb-4">
    <h1 class="display-4">User Dashboard</h1>

    <!-- Display success message if it exists -->
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">
            @TempData["message"]
        </div>
    }
    <!-- Display error message if it exists -->
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    <p>Welcome <b>@ViewBag.Username</b>!<br />
    [@roleLabel: 
    @{
        for (int i = 0; i < roles.Length; i++)
        {
            var role = roles[i].Trim();
            var conditionalComma = ",";

            var roleColor = role switch
            {
                "Admin" => "color: #B026FF; text-shadow: 0.5px 0.5px 0 #000, -0.5px 0.5px 0 #000;",     //neon-purple #B026FF
                "Moderator" => "color: #39FF14; text-shadow: 0.5px 0.5px 0 #000, -0.5px 0.5px 0 #000;", //neon-green #39FF14
                "User" => "color: #1F51FF; text-shadow: 0.5px 0.5px 0 #000, -0.5px 0.5px 0 #000;",      //neon-blue #1F51FF
                _ => "color: black;" //dfefault color
            };
            if (i == roles.Length - 1) //dont add comma for last role
            {
                conditionalComma = null; 
            }

            <span style="@roleColor">@role</span>@conditionalComma
            //Example:    PURPLE     ADMIN        , or null
        }
    }]<br />
    This is your user dashboard to control actions regarding your account.</p>
</div>

<!-- DASHBOARD PANEL CARDS -->
<div class="container">
    <div class="row">
        <!-- Task Management Card -->
        <div class="col-md-4">
            <div class="card text-center mb-4">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-tasks fa-lg"></i>
                    Task Management
                </div>
                <div class="card-body">
                    <p>Manage your dorm-related tasks and track progress.</p>
                    <a href="/Account/Tasks" class="btn btn-primary">View Tasks</a>
                </div>
            </div>
        </div>

        <!-- Expense Splitting Card -->
        <div class="col-md-4">
            <div class="card text-center mb-4">
                <div class="card-header bg-success text-white">
                    <i class="fas fa-money-bill-wave fa-lg"></i>
                    Expense Splitting
                </div>
                <div class="card-body">
                    <p>Track shared expenses and manage balance with dormmates.</p>
                    <a href="/Account/Expenses" class="btn btn-success">View Expenses</a>
                </div>
            </div>
        </div>

        <!-- P2P Lending Card -->
        <div class="col-md-4">
            <div class="card text-center mb-4">
                <div class="card-header bg-warning text-white">
                    <i class="fas fa-handshake fa-lg"></i>
                    Peer-to-Peer Lending
                </div>
                <div class="card-body">
                    <p>Manage loans and transactions with your dormmates.</p>
                    <a href="/Account/Lending" class="btn btn-warning">View Lending</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Account Settings Card -->
        <div class="col-md-4">
            <div class="card text-center mb-4">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-user-cog fa-lg"></i>
                    Account Settings
                </div>
                <div class="card-body">
                    <p>Update your account information and preferences.</p>
                    <a href="/Account/Settings" class="btn btn-info">Manage Account</a>
                </div>
            </div>
        </div>

        <!-- Notifications Card -->
        <div class="col-md-4">
            <div class="card text-center mb-4">
                <div class="card-header bg-danger text-white">
                    <i class="fas fa-bell fa-lg"></i>
                    Notifications
                </div>
                <div class="card-body">
                    <p>Check new notifications from your dormmates.</p>
                    <a href="/Account/Notifications" class="btn btn-danger">View Notifications</a>
                </div>
            </div>
        </div>

        <!-- Help & Support Card -->
        <div class="col-md-4">
            <div class="card text-center mb-4">
                <div class="card-header bg-dark text-white">
                    <i class="fas fa-cog fa-lg"></i>
                    Help & Support
                </div>
                <div class="card-body">
                    <p>Need assistance? Reach out for help with any issues.</p>
                    <a href="#" class="btn btn-dark">Get Help</a>
                </div>
            </div>
        </div>
    </div>

    <!-- ADMIN/MODERATOR ROW -->
    @if (ViewBag.UserRoles.Contains("Admin") || ViewBag.UserRoles.Contains("Moderator"))
    {
        <div class="row">
            @if (ViewBag.UserRoles.Contains("Admin")) {
                <div class="col-md-4 offset-md-4">
                    <div class="card text-center mb-4">
                        <div class="card-header bg-purple text-white">
                            <i class="fas fa-shield-alt fa-lg"></i>
                            Admin Panel
                        </div>
                        <div class="card-body">
                            <p>Manage site-wide settings and users.</p>
                            <a href="#" class="btn btn-purple">Go to Admin Panel</a>
                        </div>
                    </div>
                </div>
            }
            else if (!ViewBag.UserRoles.Contains("Admin") && ViewBag.UserRoles.Contains("Moderator")){
                <div class="col-md-4 offset-md-4">
                    <div class="card text-center mb-4">
                        <div class="card-header bg-purple text-white">
                            <i class="fas fa-shield-alt fa-lg"></i>
                            Moderator Panel
                        </div>
                        <div class="card-body">
                            <p>Manage site-wide settings and users.</p>
                            <a href="#" class="btn btn-purple">Go to Moderator Panel</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>