@inject Microsoft.Extensions.Localization.IStringLocalizerFactory LocalizerFactory
@{
    var SharedLocalizer = LocalizerFactory.Create("SharedResource", typeof(Program).Assembly.GetName().Name ?? "");
}


@{
    ViewData["Title"] = "Dashboard";
}


<div class="text-center mb-4">
    <h1 class="display-4">User Dashboard</h1>
    <p>Welcome <b>@ViewBag.Username</b>! <br /> 
    This is your user dashboard to control actions regarding your account.</p>
    <h1 class="display-4"><strong>@SharedLocalizer["UserDashboard"]</strong></h1>
    <hr class="my-4">
    <!-- Display success message if it exists -->
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">
            @TempData["message"]
        </div>
    }
    <!-- Display error message if it exists -->
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    <!--<p>@ViewBag.CultureInfo</p>-->

    <p>@SharedLocalizer["Welcome"] <b>@ViewBag.Username</b>!

    <div id="eventDetails"></div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            function updateEventTime() {
                $.get('@Url.Action("GetCurrentTime", "Account")', {}, function(data) {
                    $('#eventDetails').html(data);
                });
            }

            // Update the time every 10 seconds
            setInterval(updateEventTime, 1000);

            // Initial call to display the time immediately
            updateEventTime();
        });
    </script>


    @if (ViewBag.Roles != null && ViewBag.Roles.Count > 1) // Ensure Roles is not null
    {
        var roleLabel = ViewBag.Roles.Count > 1 ? "Roles" : "Role";

        <p>[@roleLabel:
        @{
            for (int i = 0; i < ViewBag.Roles.Count; i++)
            {
                var role = ViewBag.Roles[i].Name.Trim();
                var conditionalComma = i == ViewBag.Roles.Count - 1 ? "" : ",";

                var roleColor = role switch
                {
                    "Admin" => "color: #B026FF; text-shadow: 0.5px 0.5px 0 #000, -0.5px 0.5px 0 #000;", // neon-purple
                    "Moderator" => "color: #39FF14; text-shadow: 0.5px 0.5px 0 #000, -0.5px 0.5px 0 #000;", // neon-green
                    "User" => "color: #1F51FF; text-shadow: 0.5px 0.5px 0 #000, -0.5px 0.5px 0 #000;", // neon-blue
                    _ => "color: black;" // default color
                };

                <span style="@roleColor">@role</span>@conditionalComma
            }
        }]
        </p>
    }
</div>

<div class="container">
    <div class="row">
        <!-- Task Management Card -->
        <div class="col-md-4">
            <div class="card text-center mb-4">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-tasks fa-lg"></i>
                    @SharedLocalizer["TaskManagement"]
                </div>
                <div class="card-body">
                    <p>@SharedLocalizer["TaskManagementDescription"]</p>
                    <a href="/Tasks/Index" class="btn btn-primary">@SharedLocalizer["ViewTasks"]</a>
                </div>
            </div>
        </div>

        <!-- Expense Splitting Card -->
        <div class="col-md-4">
            <div class="card text-center mb-4">
                <div class="card-header bg-success text-white">
                    <i class="fas fa-money-bill-wave fa-lg"></i>
                    @SharedLocalizer["ExpenseSplitting"]
                </div>
                <div class="card-body">
                    <p>@SharedLocalizer["ExpenseSplittingDescription"]</p>
                    <a href="/Expenses/Index" class="btn btn-success">@SharedLocalizer["ViewExpenses"]</a>
                </div>
            </div>
        </div>

        <!-- P2P Lending Card -->
        <div class="col-md-4">
            <div class="card text-center mb-4">
                <div class="card-header bg-warning text-white">
                    <i class="fas fa-handshake fa-lg"></i> <!-- Lending Icon -->
                    Peer-to-Peer Lending
                    <i class="fas fa-handshake fa-lg"></i>
                    @SharedLocalizer["PeerToPeerLending"]
                </div>
                <div class="card-body">
                    <p>@SharedLocalizer["PeerToPeerLendingDescription"]</p>
                    <a href="/Account/Lending" class="btn btn-warning" style="color: white;">@SharedLocalizer["ViewLending"]</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Account Settings Card -->
        <div class="col-md-4">
            <div class="card text-center mb-4">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-user-cog fa-lg"></i> <!-- Account Settings Icon -->
                    Account Settings
                    <i class="fas fa-user-cog fa-lg"></i>
                    @SharedLocalizer["AccountSettings"]
                </div>
                <div class="card-body">
                    <p>@SharedLocalizer["AccountSettingsDescription"]</p>
                    <a href="/Account/Settings" class="btn btn-info">@SharedLocalizer["ManageAccount"]</a>
                </div>
            </div>
        </div>

        <!-- Notifications Card -->
        <div class="col-md-4">
            <div class="card text-center mb-4">
                <div class="card-header bg-danger text-white">
                    <i class="fas fa-bell fa-lg"></i>
                    @SharedLocalizer["Notifications"]
                </div>
                <div class="card-body">
                    <p>@SharedLocalizer["NotificationsDescription"]</p>
                    <a href="/Account/Notifications" class="btn btn-danger">@SharedLocalizer["ViewNotifications"]</a>
                </div>
            </div>
        </div>

        <!-- Help & Support Card -->
        <div class="col-md-4">
            <div class="card text-center mb-4">
                <div class="card-header bg-dark text-white">
                    <i class="fas fa-cog fa-lg"></i>
                    @SharedLocalizer["HelpAndSupport"]
                </div>
                <div class="card-body">
                    <p>@SharedLocalizer["HelpAndSupportDescription"]</p>
                    <a href="/Home/ContactUs" class="btn btn-dark">@SharedLocalizer["GetHelp"]</a>
                </div>
            </div>
        </div>
    </div>
</div>