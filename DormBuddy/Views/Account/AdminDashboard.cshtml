@model DormBuddy.ViewModels.AdminDashboardViewModel

<div class="container">
    <h1 class="display-4">Admin Dashboard</h1>
    <p>Welcome, @ViewBag.Username!</p>

    <!-- Monthly Activity Report Section -->
    <div class="mt-5">
        <h2>Monthly Activity Report</h2>
        <div class="mt-3 mb-4">
            <a href="/Admin/ExportMonthlyReport" class="btn btn-secondary">Download CSV</a>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Total Logins</th>
                    <th>Last Login</th>
                    <th>Groups Joined</th>
                    <th>Tasks Created</th>
                    <th>Expenses Added</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.MonthlyReport)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.TotalLogins</td>
                        <td>@user.LastLoginDate?.ToString("yyyy-MM-dd") ?? "N/A"</td>
                        <td>@user.GroupsJoined</td>
                        <td>@user.TasksCreated</td>
                        <td>@user.ExpensesAdded</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Logs Section -->
    <div class="mt-5">
        <h2>System Logs</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Timestamp</th>
                    <th>Action</th>
                    <th>Username</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.Logs)
                {
                    <tr>
                        <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@log.Action</td>
                        <td>@log.Username</td>
                        <td>@log.Details</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- User Management Section -->
    <div class="mt-5">
        <h2>User Management</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            <a href="/Admin/AssignRole?userId=@user.Id" class="btn btn-primary btn-sm">Assign Role</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>