@model IEnumerable<UserActivityReport>

<h1>Monthly Reports</h1>

@if (!Model.Any())
{
    <p>No reports available.</p>
}
else
{
    <ul>
        @foreach (var report in Model)
        {
            <li>
                @report.FullName - Last Login: 
                @(report.LastLoginDate.HasValue ? report.LastLoginDate.Value.ToShortDateString() : "Never")
            </li>
        }
    </ul>
}


<!-- Return to Dashboard Button -->
<div class="mb-4">
    <a href="/Account/Dashboard" class="btn btn-outline-primary">
        <i class="fa fa-chevron-left"></i> Return to Dashboard
    </a>
</div>