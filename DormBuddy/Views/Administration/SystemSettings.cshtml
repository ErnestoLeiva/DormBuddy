<h1>System Settings</h1>
<p>This is the system settings page.</p>
<form method="post" action="/Administration/UpdateSystemSettings">
    <div class="form-group">
        <label for="setting1">Setting 1:</label>
        <input type="text" class="form-control" id="setting1" name="Setting1" value="DefaultValue">
    </div>
    <div class="form-group">
        <label for="setting2">Setting 2:</label>
        <input type="checkbox" id="setting2" name="Setting2" checked>
    </div>
    <button type="submit" class="btn btn-primary">Save Settings</button>
</form>

<ul class="nav nav-tabs" id="settingsTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">General</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="security-tab" data-bs-toggle="tab" data-bs-target="#security" type="button" role="tab" aria-controls="security" aria-selected="false">Security</button>
    </li>
</ul>
<div class="tab-content" id="settingsTabsContent">
    <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
        <p>General settings content goes here.</p>
    </div>
    <div class="tab-pane fade" id="security" role="tabpanel" aria-labelledby="security-tab">
        <p>Security settings content goes here.</p>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<!-- Return to Dashboard Button -->
<div class="mb-4">
    <a href="/Account/Dashboard" class="btn btn-outline-primary">
        <i class="fa fa-chevron-left"></i> Return to Dashboard
    </a>
</div>