@model List<DormBuddy.Models.LogModel>

<table>
    <thead>
        <tr>
            <th>Timestamp</th>
            <th>Action</th>
            <th>Username</th>
            <th>Details</th>
            <th>Log Type</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var log in Model)
            {
                <tr>
                    <td>@log.Timestamp</td>
                    <td>@log.Action</td>
                    <td>@log.Username</td>
                    <td>@log.Details</td>
                    <td>@(string.IsNullOrEmpty(log.LogType) ? "N/A" : log.LogType)</td>
                    <td>@(string.IsNullOrEmpty(log.Description) ? "N/A" : log.Description)</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No logs available.</td>
            </tr>
        }
    </tbody>
</table>
