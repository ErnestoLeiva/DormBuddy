@inject Microsoft.Extensions.Localization.IStringLocalizerFactory LocalizerFactory
@{
    var SharedLocalizer = LocalizerFactory.Create("SharedResource", typeof(Program).Assembly.GetName().Name ?? "");
}

@inject NavBarInfoService NavBarInfoService
@using System.Threading.Tasks

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DormBuddy</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- Bootstrap CSS from CDN -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Site-specific CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared-components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tasks.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/expenses.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/settings.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/lending.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/groups.css" asp-append-version="true" />
    
    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Just+Another+Hand&display=swap">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="layout-container">
        <!-- Sidebar -->
        <aside class="sidebar expanded" id="sidebar">
            <div class="sidebar-logo">
                <img src="~/favicon.ico" alt="DormBuddy Logo" /> 
            </div>
            <div class="sidebar-nav">
                <a href="/Tasks/Index" class="sidebar-item">
                    <i class="fas fa-tasks"></i>
                    <span>Task Management</span>
                </a>

                <a href="/Expenses/Index" class="sidebar-item">
                    <i class="fas fa-money-bill-wave"></i>
                    <span>Expense Splitting</span>
                </a>
                <a href="/PeerLending/Index" class="sidebar-item">
                    <i class="fas fa-handshake"></i>
                    <span>Peer Lending</span>
                </a>
                <a href="/Groups/Index" class="sidebar-item">
                    <i class="fas fa-users"></i>
                    <span>Manage Groups</span>
                </a>
                <a href="/Account/Settings" class="sidebar-item">
                    <i class="fas fa-user-cog"></i>
                    <span>Settings</span>
                </a>
                <a href="/Home/ContactUs" class="sidebar-item">
                    <i class="fas fa-question-circle"></i>
                    <span>Help</span>
                </a>
            </div>
            <div class="toggle-button" id="sidebarToggle">
                <i class="fas fa-chevron-right"></i>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <!-- Navbar -->
            <header>
                <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="HomeLogin">
                            @SharedLocalizer["DormBuddyLogo"]
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav flex-grow-1">
                                @if (User?.Identity != null && User.Identity.IsAuthenticated) {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Dashboard">@SharedLocalizer["Dashboard"]</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@SharedLocalizer["Privacy"]</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ContactUs">@SharedLocalizer["ContactUs"]</a>
                                    </li>
                                } else {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HomeLogin">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="AccountForms">Login/Sign Up</a>
                                    </li>
                                }
                            </ul>
                        </div>

                        @if (User?.Identity != null && User.Identity.IsAuthenticated)

                        {
                            string uname = User?.Identity?.Name;

                            if (!string.IsNullOrEmpty(uname))
                            {
                                var uInfo = await NavBarInfoService.GetUserInformationAsync(uname);

                                if (uInfo != null && uInfo.User != null)
                                {
                                    string firstName = uInfo.User.FirstName ?? "";
                                    string lastName = uInfo.User.LastName ?? "";
                                    string profileImage = uInfo.ProfileImageUrl ?? "";

                                    <div class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <img class="dropdown-avatar" src="@profileImage" alt="Profile Image" /> @firstName @lastName
                                        </button>

                                        <div class="dropdown-menu dropdown-menu-right text-left">
                                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                                <i class="fas fa-user"></i> Profile
                                            </a>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="Settings">
                                                <i class="fas fa-cog"></i> Settings
                                            </a>
                                            <div class="line-divider"></div>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                                <i class="fas fa-sign-out-alt"></i> Sign Out
                                            </a>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>
                </nav>

                        
                <div id="global-message" class="global-message @ViewData["GlobalMessageType"]" style="display: none;">
                    <div id="body">
                        @ViewData["GlobalMessage"]
                    </div>
                </div>

                <script>
                    document.addEventListener("DOMContentLoaded", () => {
                        const message = document.getElementById("global-message");
                        if (message && message.textContent.trim()) {
                            message.style.display = "block";
                            setTimeout(() => message.style.display = "none", 5000); // Hide after 5 seconds
                        }
                    });
                </script>

            </header>

            <!-- Main Content -->
            <main role="main" class="pb-3">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2024 - DormBuddy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                </div>

                
            </footer>
        </div>
    </div>
    
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.0/signalr.min.js"></script>


<script>
    document.addEventListener("DOMContentLoaded", () => {
        // Check if the user is authenticated and set up SignalR
        fetch('/api/auth/isAuthenticated')
            .then(response => response.json())
            .then(isAuthenticated => {
                if (isAuthenticated) {
                    const connection = new signalR.HubConnectionBuilder()
                        .withUrl("/notificationHub")
                        .build();

                    connection.start()
                        .then(() => console.log("Connected to SignalR"))
                        .catch(err => console.error("SignalR Connection Error: ", err));

                    // Handle receiving messages from the server
                    connection.on("ReceiveMessage", (message, messageType) => {
                        // Show the global message
                        showGlobalMessage(message, messageType);
                    });
                } else {
                    console.log("User is not authenticated. Skipping SignalR connection.");
                }
            })
            .catch(error => {
                console.log("Error checking authentication:", error);
            });

        function showGlobalMessage(message, type) {
            const messageElement = document.getElementById("global-message");
            if (messageElement) {
                messageElement.querySelector("#body").textContent = message;
                messageElement.className = "global-message " + type; // Add class for message type
                messageElement.style.display = "block";  // Show the message
                setTimeout(() => messageElement.style.display = "none", 5000); // Hide after 5 seconds
            }
        }
        //showGlobalMessage("targetUsername message", "success");
    });
</script>



    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>